        {
            "text": "üî® Build",
            "tooltip": "Maven Build",
            "command": "workbench.action.terminal.sendSequence", 
            "arguments": {
                "text": "mvn clean package\r"
            },
            "alignment": "left",
            "priority": 99
        },
        {
            "text": "üß™ Test",
            "tooltip": "Maven Test",
            "command": "workbench.action.terminal.sendSequence",
            "arguments": {
                "text": "mvn test\r"
            },
            "alignment": "left",
            "priority": 98
        },
        {
            "text": "üì¶ Install",
            "tooltip": "Maven Install",
            "command": "workbench.action.terminal.sendSequence",
            "arguments": {
                "text": "mvn install\r"
            },
            "alignment": "left",
            "priority": 97
        },
        {
            "text": "üîÑ Refresh",
            "tooltip": "Git Refresh",
            "command": "workbench.action.terminal.sendSequence",
            "arguments": {
                "text": "git fetch && git reset --hard && git clean -fd\r"
            },
            "alignment": "left",
            "priority": 96
        },
        {
            "text": "‚ôªÔ∏è Reload",
            "tooltip": "Reload VS Code",
            "command": "workbench.action.reloadWindow",
            "alignment": "right",
            "priority": 95
        }
    ],
    
    // === TRUNK.IO CONFIGURATION (Code Quality) ===
    "trunk.trunkPath": "",
    "trunk.enableLsp": true,
    "trunk.enableCodeActions": true,
    "trunk.enableDiagnostics": true,
    "trunk.enableFormatter": true,
    
    // === SOURCERY CONFIGURATION (AI Code Review) ===
    "sourcery.metricsEnabled": true,
    "sourcery.codeLensEnabled": true,
    "sourcery.enableOnTypeFormatting": true,
    "sourcery.pythonPath": "python"
}
