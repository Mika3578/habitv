{
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    
    // Configuration des raccourcis et boutons
    "workbench.action.toggleSidebarVisibility": "Ctrl+B",
    "workbench.action.togglePanel": "Ctrl+J",
    
    // Configuration Maven
    "maven.executable.path": "mvn",
    "maven.terminal.useJavaHome": true,
    "maven.terminal.customEnv": [
        {
            "environmentVariable": "JAVA_HOME",
            "value": "${env:JAVA_HOME}"
        }
    ],
    
    // Configuration Git
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "git.confirmSync": false,
    
    // Configuration des fichiers
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/target": true,
        "**/.mvn": false,
        "**/node_modules": true,
        "**/.git": true
    },
    
    // Configuration de l'explorateur
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    // Configuration du terminal
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        }
    },
    
    // Configuration des t√¢ches
    "task.autoDetect": "on",
    "task.slowProviderWarning": false,
    
    // Configuration des extensions
    "extensions.autoUpdate": true,
    "extensions.autoCheckUpdates": true,
    
    // Configuration du workspace
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    
    // Configuration des notifications
    "notifications.enable": true,
    "notifications.keepNotifications": false,
    
    // === ACTION BUTTONS CONFIGURATION (Status Bar) ===
    "actionButtons": {
        "reloadButton": "‚ôªÔ∏è",
        "loadNpmCommands": false,
        "commands": [
            {
                "cwd": "${workspaceFolder}",
                "name": "üßπ Clean",
                "color": "#ff6b6b",
                "singleInstance": true,
                "command": "mvn clean",
                "tooltip": "Maven Clean - Nettoie le projet"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üî® Build",
                "color": "#4ecdc4",
                "singleInstance": true,
                "command": "mvn clean package",
                "tooltip": "Maven Build - Compile et package le projet"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üß™ Test",
                "color": "#45b7d1",
                "singleInstance": true,
                "command": "mvn test",
                "tooltip": "Maven Test - Lance les tests unitaires"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üì¶ Install",
                "color": "#96ceb4",
                "singleInstance": true,
                "command": "mvn install",
                "tooltip": "Maven Install - Installe dans le repository local"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üå≥ Deps",
                "color": "#feca57",
                "singleInstance": true,
                "command": "mvn dependency:tree",
                "tooltip": "Maven Dependencies - Affiche l'arbre des d√©pendances"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "‚úÖ Verify",
                "color": "#54a0ff",
                "singleInstance": true,
                "command": "mvn verify",
                "tooltip": "Maven Verify - V√©rifie la qualit√© du package"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üîÑ Refresh",
                "color": "#5f27cd",
                "singleInstance": true,
                "command": "git fetch && git reset --hard && git clean -fd",
                "tooltip": "Git Refresh - Synchronise avec le repository distant"
            },
            {
                "name": "‚ôªÔ∏è Reload IDE",
                "color": "#ff6348",
                "command": "workbench.action.reloadWindow",
                "tooltip": "Recharge compl√®tement VS Code"
            }
        ]
    },
    
    // === TASK BUTTONS CONFIGURATION (Status Bar) ===
    "taskButtons.showCounter": true,
    "taskButtons.tasks": [
        {
            "label": "üßπ Clean",
            "task": "habitv-clean",
            "tooltip": "Maven Clean via Task"
        },
        {
            "label": "üî® Build", 
            "task": "habitv-build",
            "tooltip": "Maven Build via Task"
        },
        {
            "label": "üß™ Test",
            "task": "habitv-test", 
            "tooltip": "Maven Test via Task"
        },
        {
            "label": "üì¶ Install",
            "task": "habitv-install",
            "tooltip": "Maven Install via Task"
        },
        {
            "label": "üöÄ Deploy",
            "task": "habitv-deploy",
            "tooltip": "Maven Deploy via Task"
        },
        {
            "label": "üì¶ Jar",
            "task": "habitv-build-jar",
            "tooltip": "Build JAR ex√©cutable"
        },
        {
            "label": "‚ôªÔ∏è Refresh",
            "task": "habitv-refresh",
            "tooltip": "Git Refresh via Task"
        }
    ]
}
