{
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.compile.nullAnalysis.mode": "automatic",
    
    // Configuration des raccourcis et boutons
    "workbench.action.toggleSidebarVisibility": "Ctrl+B",
    "workbench.action.togglePanel": "Ctrl+J",
    
    // Configuration Maven
    "maven.executable.path": "mvn",
    "maven.terminal.useJavaHome": true,
    "maven.terminal.customEnv": [
        {
            "environmentVariable": "JAVA_HOME",
            "value": "${env:JAVA_HOME}"
        }
    ],
    
    // Configuration Git
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "git.confirmSync": false,
    
    // Configuration des fichiers
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/target": true,
        "**/.mvn": false,
        "**/node_modules": true,
        "**/.git": true
    },
    
    // Configuration de l'explorateur
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    
    // Configuration du terminal
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        }
    },
    
    // Configuration des t√¢ches
    "task.autoDetect": "on",
    "task.slowProviderWarning": false,
    
    // Configuration des extensions
    "extensions.autoUpdate": true,
    "extensions.autoCheckUpdates": true,
    
    // Configuration du workspace
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    
    // Configuration des notifications
    "notifications.enable": true,
    "notifications.keepNotifications": false,
    
    // === ACTION BUTTONS CONFIGURATION (Status Bar) ===
    "actionButtons": {
        "reloadButton": "‚ôªÔ∏è",
        "loadNpmCommands": false,
        "commands": [
            {
                "cwd": "${workspaceFolder}",
                "name": "üßπ Clean",
                "color": "#ff6b6b",
                "singleInstance": true,
                "command": "mvn clean",
                "tooltip": "Maven Clean - Nettoie le projet"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üî® Build",
                "color": "#4ecdc4",
                "singleInstance": true,
                "command": "mvn clean package",
                "tooltip": "Maven Build - Compile et package le projet"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üß™ Test",
                "color": "#45b7d1",
                "singleInstance": true,
                "command": "mvn test",
                "tooltip": "Maven Test - Lance les tests unitaires"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üì¶ Install",
                "color": "#96ceb4",
                "singleInstance": true,
                "command": "mvn install",
                "tooltip": "Maven Install - Installe dans le repository local"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üå≥ Deps",
                "color": "#feca57",
                "singleInstance": true,
                "command": "mvn dependency:tree",
                "tooltip": "Maven Dependencies - Affiche l'arbre des d√©pendances"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "‚úÖ Verify",
                "color": "#54a0ff",
                "singleInstance": true,
                "command": "mvn verify",
                "tooltip": "Maven Verify - V√©rifie la qualit√© du package"
            },
            {
                "cwd": "${workspaceFolder}",
                "name": "üîÑ Refresh",
                "color": "#5f27cd",
                "singleInstance": true,
                "command": "git fetch && git reset --hard && git clean -fd",
                "tooltip": "Git Refresh - Synchronise avec le repository distant"
            },
            {
                "name": "‚ôªÔ∏è Reload IDE",
                "color": "#ff6348",
                "command": "workbench.action.reloadWindow",
                "tooltip": "Recharge compl√®tement VS Code"
            }
        ]
    },
    
    // === TASK BUTTONS CONFIGURATION (Status Bar) ===
    "taskButtons.showCounter": true,
    "taskButtons.tasks": [
        {
            "label": "üßπ Clean",
            "task": "habitv-clean",
            "tooltip": "Maven Clean via Task"
        },
        {
            "label": "üî® Build", 
            "task": "habitv-build",
            "tooltip": "Maven Build via Task"
        },
        {
            "label": "üß™ Test",
            "task": "habitv-test", 
            "tooltip": "Maven Test via Task"
        },
        {
            "label": "üì¶ Install",
            "task": "habitv-install",
            "tooltip": "Maven Install via Task"
        },
        {
            "label": "üöÄ Deploy",
            "task": "habitv-deploy",
            "tooltip": "Maven Deploy via Task"
        },
        {
            "label": "üì¶ Jar",
            "task": "habitv-build-jar",
            "tooltip": "Build JAR ex√©cutable"
        },
        {
            "label": "‚ôªÔ∏è Refresh",
            "task": "habitv-refresh",
            "tooltip": "Git Refresh via Task"
        }
    ],
    
    // === ACTIVITUS BAR CONFIGURATION (Status Bar) ===
    "activitusbar.searchViewInPanel": false,
    "activitusbar.activeColour": "#4CAF50",
    "activitusbar.inactiveColour": "#888888",
    "activitusbar.views": [
        {
            "name": "explorer",
            "codicon": "file-directory"
        },
        {
            "name": "search",
            "codicon": "search"
        },
        {
            "name": "scm",
            "codicon": "source-control"
        },
        {
            "name": "debug",
            "codicon": "debug"
        },
        {
            "name": "extensions",
            "codicon": "extensions"
        }
    ],
    
    // === TERMINAL COMMANDS CONFIGURATION ===
    "terminalCommands.commands": [
        {
            "name": "üßπ Maven Clean",
            "command": "mvn clean",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "üî® Maven Build",
            "command": "mvn clean package",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "üß™ Maven Test",
            "command": "mvn test",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "üì¶ Maven Install",
            "command": "mvn install",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "üå≥ Maven Dependencies",
            "command": "mvn dependency:tree",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "‚úÖ Maven Verify",
            "command": "mvn verify",
            "showInExplorer": true,
            "showInTerminal": true
        },
        {
            "name": "üîÑ Git Refresh",
            "command": "git fetch && git reset --hard && git clean -fd",
            "showInExplorer": true,
            "showInTerminal": true        }
    ],
    
    // === SHORTCUT MENU BAR CONFIGURATION (Menu Bar) ===
    "shortcutMenuBar.navigateBack": true,
    "shortcutMenuBar.navigateForward": true,
    "shortcutMenuBar.showMenuBar": true,
    "shortcutMenuBar.userButton01Command": "workbench.action.tasks.runTask",
    "shortcutMenuBar.userButton01Text": "üî® Build",
    "shortcutMenuBar.userButton01Tooltip": "Ex√©cuter une t√¢che de build",
    "shortcutMenuBar.userButton02Command": "workbench.action.terminal.new",
    "shortcutMenuBar.userButton02Text": "üíª Terminal",
    "shortcutMenuBar.userButton02Tooltip": "Ouvrir un nouveau terminal",
    "shortcutMenuBar.userButton03Command": "workbench.action.reloadWindow",
    "shortcutMenuBar.userButton03Text": "‚ôªÔ∏è Reload",
    "shortcutMenuBar.userButton03Tooltip": "Recharger VS Code",
    "shortcutMenuBar.userButton04Command": "git.fetch",
    "shortcutMenuBar.userButton04Text": "‚¨áÔ∏è Fetch",
    "shortcutMenuBar.userButton04Tooltip": "Git Fetch",
    "shortcutMenuBar.userButton05Command": "workbench.action.showCommands",
    "shortcutMenuBar.userButton05Text": "‚åò Commands",
    "shortcutMenuBar.userButton05Tooltip": "Palette de commandes",
    
    // === STATUSBAR COMMANDS CONFIGURATION (Status Bar) ===
    "statusbar-commands.commands": [
        {
            "text": "üßπ Clean",
            "tooltip": "Maven Clean",
