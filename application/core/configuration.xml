<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://www.dabi.com/habitv/configuration/entities" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.dabi.com/habitv/configuration/entities configuration.xsd ">
    <proxies/>
    <osConfig/>
    <downloadConfig>
        <downloadOuput>D:/divx/regular/#TVSHOW_NAME#-#EPISODE_NAME_CUT#.#EXTENSION#</downloadOuput>
        <maxAttempts>5</maxAttempts>
        <demonCheckTime>1800</demonCheckTime>
        <fileNameCutSize>50</fileNameCutSize>
        <downloaders>
            <http/>
            <rtmpdump>bin\rtmpdump.exe</rtmpdump>
            <aria2>bin\aria2c.exe</aria2>
            <curl>bin\curl.exe</curl>
            <ffmpeg>bin\ffmpeg.exe</ffmpeg>
            <youtube>bin\yt-dlp.exe</youtube>
        </downloaders>
    </downloadConfig>
    <updateConfig>
        <updateOnStartup>true</updateOnStartup>
        <autoriseSnapshot>true</autoriseSnapshot>
    </updateConfig>
    <credentialsConfig>
        <credential>
            <service>m6plus</service>
            <username>your_email@example.com</username>
            <password>your_password</password>
            <enabled>true</enabled>
            <description>M6+ account for accessing premium content</description>
        </credential>
        <credential>
            <service>arte</service>
            <username>your_arte_username</username>
            <password>your_arte_password</password>
            <enabled>false</enabled>
            <description>Arte account (disabled)</description>
        </credential>
    </credentialsConfig>
    <exportConfig>
        <exporters>
            <exporter>
                <condition>
                    <reference>#EXTENSION#</reference>
                    <pattern>.*</pattern>
                </condition>
                <id>mkdir</id>
                <label>Create dir</label>
                <command>cmd /c mkdir &quot;D:\divx\regular\avi\#TVSHOW_NAME#&quot; | echo createdir</command>
                <subexporters/>
            </exporter>
            <exporter>
                <condition>
                    <reference>#EXTENSION#</reference>
                    <pattern>.*</pattern>
                </condition>
                <id>move</id>
                <label>move file</label>
                <command>cmd /c move &quot;D:\divx\regular\#TVSHOW_NAME#-#EPISODE_NAME_CUT#.#EXTENSION#&quot; &quot;D:\divx\regular\avi\#TVSHOW_NAME#\#DATEÂ§yyyyMMdd# - #EPISODE_NAME_CUT#.#EXTENSION#&quot;</command>
                <subexporters/>
            </exporter>
        </exporters>
    </exportConfig>
    <taskDefinition>
        <category>5</category>
        <export>2</export>
        <retreive>50</retreive>
        <search>5</search>
        <download>1</download>
        <curl>2</curl>
        <ffmpeg>1</ffmpeg>
    </taskDefinition>
</configuration>
